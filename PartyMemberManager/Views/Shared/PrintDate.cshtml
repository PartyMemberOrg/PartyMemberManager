@{
    DateTime date = DateTime.Today;
    var dateString = string.Format("{0:yyyy-MM-dd}", date);
}
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label for="date" asp-required="true" class="control-label">打印日期</label>
                    </div>
                    <div class="@InputDivDefaultClass">
                        <input id="date" name="date" class="form-control" placeholder="yyyy-MM-dd" readonly value="@dateString" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/layui/layui.js"></script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
        });
    </script>
    <script type="text/javascript">
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            laydate.render({
                elem: '#date'
                , trigger: 'click'
            });
        });
    </script>
    <script>
        //注意：选项卡 依赖 element 模块，否则无法进行功能性操作
        layui.use('element', function () {
            var element = layui.element;
        });
    </script>
}