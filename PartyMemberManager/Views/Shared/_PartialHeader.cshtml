@model bool
<header style="height:60px;display:none;" class="app-sys-command-container" id="pageHeader">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light headerbar app-sys-command-container" style="height:60px">
        <div class="container app-sys-command-container" style="color:white">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">ERAS临床路径应用系统</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse float-right">
                <ul class="navbar-nav flex-grow-1">
                    @if (Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white sys-commands" href="javascript:;">
                                @*@CurrentUser.Name*@
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white sys-commands" href="javascript:logout()">
                                <i class="layui-icon layui-icon-home" style="font-size: 14px; color: #FFFFFF;"></i>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-white sys-commands" href="javascript:editOperator()">
                            <i class="layui-icon layui-icon-user" style="font-size: 14px; color: #FFFFFF;"></i>
                        </a>
                    </li>
                    <li class="nav-item" n-ui-command="close">
                        <a class="nav-link text-white sys-commands" href="javascript:showAbout();">
                            <i class="layui-icon layui-icon-tips" style="font-size: 14px; color: #FFFFFF;"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
