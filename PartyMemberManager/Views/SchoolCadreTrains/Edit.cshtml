@model PartyMemberManager.Dal.Entities.SchoolCadreTrain

@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Edit";
}
<div class="row form-padding-top">
    <div class="col-md-12">
        <partial name="_PartialEdit" model="@Model" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/layui/layui.js"></script>
    <script>
        $(document).ready(function () {
            $("#TrainDuration").change(function () {
                computeHour();
            });
        });
        /**计算比例 */
        function computeHour() {
            var TrainDuration = parseInt($("#TrainDuration").val());
            $("#ClassHour").val(TrainDuration * 8);
        }
    </script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
        });
    </script>
    <script type="text/javascript">
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            laydate.render({
                elem: '#Year',
                type: 'year'
                , trigger: 'click'
            });
            laydate.render({
                elem: '#TrainTime'
                , trigger: 'click'
            });
        });
    </script>
}