@model PartyMemberManager.Dal.Entities.Department

@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Create";
}

<h1>添加</h1>

<h4>Department</h4>
<hr />
<div class="row form-padding-top">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div >
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="Password" class="control-label"></label>
                    </div>
                    <div >
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="SchoolAreas" class="control-label"></label>
                    </div>
                    <div>
                        <select asp-for="SchoolAreas" asp-items="@Html.GetEnumSelectList(typeof(SchoolArea))" class="form-control"></select>
                        <span asp-validation-for="SchoolAreas" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="CreateTime" class="control-label"></label>
                    </div>
                    <div >
                        <input asp-for="CreateTime" class="form-control" />
                        <span asp-validation-for="CreateTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="OperatorId" class="control-label"></label>
                    </div>
                    <div >
                        <input asp-for="OperatorId" class="form-control" />
                        <span asp-validation-for="OperatorId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="Ordinal" class="control-label"></label>
                    </div>
                    <div >
                        <input asp-for="Ordinal" class="form-control" />
                        <span asp-validation-for="Ordinal" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="@LabelDivDefaultClass">
                        <label asp-for="IsDeleted" class="control-label"></label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
