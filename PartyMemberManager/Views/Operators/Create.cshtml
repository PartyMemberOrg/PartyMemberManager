@model PartyMemberManager.Dal.Entities.Operator

@{
    Layout = "_LayoutEdit";
    ViewData["Title"] = "Create";
}

<div class="row form-padding-top">
    <div class="col-md-12">
        <form asp-action="Create">
            <partial name="_PartialEdit" model="@Model" />
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        layui.use('form', function () {
            var form = layui.form;
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Roles").change(function () {
                var roles = $("#Roles").val();
                switch (roles) {
                    case "@((int)Role.学院党委)":
                        $("#DepartmentContainer").show();
                        break;
                    case "@((int)Role.学校党委)":
                        $("#DepartmentContainer").hide();
                        break;
                    case "@((int)Role.系统管理员)":
                        $("#DepartmentContainer").hide();
                        break;
                    case "@((int)Role.超级管理员)":
                        $("#DepartmentContainer").hide();
                        break;
                }
            });
            $("#Roles").change();
        });
    </script>
}
