            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger validate-message-offset @ValidateSpanDefaultClass"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="@LabelDivDefaultClass">
            <label asp-for="Password" asp-required="true" class="control-label"></label>
        </div>
        <div class="@InputDivDefaultClass">
            <input asp-for="Password" class="form-control" value="@Model.Password" />
            <span asp-validation-for="Password" class="text-danger validate-message-offset @ValidateSpanDefaultClass"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="@LabelDivDefaultClass">
            <label asp-for="Roles" asp-required="false" class="control-label"></label>
        </div>
        <div class="@InputDivDefaultClass">
            <select asp-for="Roles" asp-items="@roleList" class="form-control"></select>
            <span asp-validation-for="Roles" class="text-danger validate-message-offset @ValidateSpanDefaultClass"></span>
        </div>
    </div>
</div>
