        var tableObject = null;
        $(document).ready(function () {
            $("body").width("100%");
            $(window).resize(function () {
                $("body").width("100%");
            });
            $("#YearTermId").change(function () {
                filterTrainClass();
            });
            $("#DepartmentId").change(function () {
                filterTrainClass();
            });
            filterTrainClass();
            InitTable();
