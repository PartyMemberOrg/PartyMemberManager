        /**显示隐藏滚动条 */
        function showHideScrollBars(count) {
            if (count > 11) {
                $("body").css("overflow-y", "auto");
            }
            else {
                $("body").css("overflow-y", "hidden");
                $(document).scrollTop(0);
            }
        }
        /**显示操作菜单 */
        function showOperatMenu(event, id, totalGrade, isPass) {
            var contextMenu = new ContextMenu();
            contextMenu.addMenuItem("打印", function () {
                if (isPass=="false")
                    showError("成绩不合格无法打印");
                else
                    showPrint('@Url.Action("PrintAndPreview")' + '?fillBlank=false&idList=' + id, '打印结业证', 800, 600, function () { updatePrintStatus(id);}, function () { tablefilter(); });
            })
                contextMenu.addMenuItem("录入补考成绩", function () {
                    showEdit('@Url.Action("BcGrade", "PotentialTrainResults")' + '/' + id, '@Url.Action("BcGrade", "PotentialTrainResults")', '录入补考成绩', 500, 400);
                })
           @* contextMenu.addMenuItem("删除", function () {
                Delete(id);
            })*@
            contextMenu.addMenuItem("上移", function () {
                ItemUp(id);
            })
            contextMenu.addMenuItem("下移", function () {
                ItemDown(id);
            })
            contextMenu.showMenu(event);
        }
        function importExcel() {
            showImport('@Url.Action("Import")', '@Url.Action("Import")', '导入发展对象培训成绩', 600, 450, function () { location.reload(); });
        }
        /**打印选中的发展对象培训结业证 */
        function printSelected() {
            var datas="";
            layui.use('table', function () {
                var table = layui.table;
                var checkData = table.checkStatus('dataGrid').data;
                    for (i = 0; i < checkData.length; i++) {
                        if (checkData[i].isPass == true) {
                            datas+=checkData[i].id+",";
                        }
                    }
            });
            if (datas == "")
                showError("请选择成绩合格的发展对象");
            else
                showPrint('@Url.Action("PrintAndPreview")' + '?fillBlank=false&idList=' + datas, '打印结业证', 800, 600, function () { updatePrintStatus(datas); }, function () { tablefilter(); });
        }
        /**预览选中的发展对象培训结业证 */
        function previewSelected() {
            var datas="";
            layui.use('table', function () {
                var table = layui.table;
                var checkData = table.checkStatus('dataGrid').data;
                    for (i = 0; i < checkData.length; i++) {
                        if (checkData[i].isPass == true) {
                            datas+=checkData[i].id+",";
                        }
                    }
            });
            if (datas == "")
                showError("请选择成绩合格的发展对象");
            else
                showPrint('@Url.Action("PrintAndPreview")' + '?fillBlank=true&idList=' + datas, '打印结业证', 800, 600, function () { updatePrintStatus(datas);}, function () { tablefilter(); });
        }
        /**
         * 更新打印状态
         * @@param datas
         */
        function updatePrintStatus(datas) {
            var postUrl = '@Url.Action("UpdatePrintStatus")';
            $.ajax({
                url: postUrl,
                data: {idList:datas},
                type: "post",
                dataType: "json",
                success: function (response) {
                    if (response.code == 0) {
                    }
                    else {
                        layer.msg(response.message, {
                            icon: 2,
                            time: 2000
                        },
                            function () {
                                //保存时发生错误
                            });
                    }
                },
                error: function () {
                    showError("更新打印状态时发生错误");
                }
            });
        }
    </script>
