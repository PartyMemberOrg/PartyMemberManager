@model PartyMemberManager.Dal.Entities.ActiveApplicationSurvey

@{
    Layout = "_LayoutEdit";
    ViewData["Title"] = "Create";
}
<div class="row form-padding-top">
    <div class="col-md-12">
        <form asp-action="Create">
            <partial name="_PartialEdit" model="@Model" />
        </form>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/layui/layui.js"></script>
    <script>
        $(document).ready(function () {
            $("#TrainTotal").change(function () {
                computeScale();
            });
            $("#Total").change(function () {
                computeScale();
            });
        });
        layui.use('form', function () {
            var form = layui.form;
        });
        /**计算比例 */
        function computeScale() {
            var trainTotal = parseFloat($("#TrainTotal").val());
            var total = parseFloat($("#Total").val());
            var scale = (trainTotal / total);
            scale = (scale * parseFloat(100)).toFixed(2);
            $("#Proportion").val(scale.toString()+"%");
        }
    </script>
    <script type="text/javascript">
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            laydate.render({
                elem: '#year',
                type: 'year',
                done: function (value, date) {
                    $("#yearAdd").val(value * 1 + 1);
                }
            });
        });
    </script>
    }
